<?xml version="1.0" encoding="utf-8"?>
<com.ostojan.x360.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_loading"
        android:id="@+id/image_cover"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/GameItemTitle">
        <TextView
            android:text="@string/title_game_title"
            android:textAppearance="@style/GameItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_title" />
    </RelativeLayout>

</com.ostojan.x360.view.SquareRelativeLayout>
